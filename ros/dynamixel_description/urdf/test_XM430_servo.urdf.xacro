<?xml version="1.0"?>
<robot name="my_robo" xmlns:xacro="http://ros.org/wiki/xacro">\
	<xacro:include filename="$(find dynamixel_description)/urdf/_XM430.urdf.xacro"/>
	<xacro:include filename="$(find dynamixel_description)/urdf/common_properties.xacro"/>

	<link name="base">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.05 0.08 0.001"/>
			</geometry>
			<material name="orange"/>
		</visual>
	</link>

	<xacro:servo_XM430 name="yaw" parent="base" child="connector" center_child="false" fixed_plane="back" fixed_angle="${0}"/>

    <link name="connector"/>

    <xacro:servo_XM430_FR12_S102K parent="connector" child="hone_pitch" center_child="true" fixed_plane="bottom" fixed_angle="${pi/2}"/>

	<link name="hone_pitch">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.01 0.02 0.06"/>
			</geometry>
			<material name="red"/>
		</visual>
	</link>

	<gazebo reference="base">
		<material>Gazebo/Orange</material>
	</gazebo>
	
	<gazebo reference="hone">
		<material>Gazebo/Red</material>
	</gazebo>

    <!--ros_controlプラグインをロード-->
    <gazebo>
        <plugin name="control" filename="libgazebo_ros_control.so">
        </plugin>
    </gazebo>

</robot>