<?xml version="1.0"?>
<robot name="my_robo" xmlns:xacro="http://ros.org/wiki/xacro">\
	<xacro:include filename="$(find dynamixel_description)/urdf/_2XL430.urdf.xacro"/>
	<xacro:include filename="$(find dynamixel_description)/urdf/common_properties.xacro"/>

	<link name="base">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<cylinder length="0.001" radius="0.01"/>
			</geometry>
			<material name="orange"/>
		</visual>
	</link>

	<xacro:servo_2XL430 parent="base" center_parent="false" child="hone" center_child="true" />

	<link name="hone">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<cylinder length="0.001" radius="0.01"/>
			</geometry>
			<material name="red"/>
		</visual>
	</link>

	<link name="weight">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.01 0.01 0.01"/>
			</geometry>
			<material name="red"/>
		</visual>
		<inertial>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<mass value="0.1" />
			<inertia
				ixx="0.01" ixy="0.0" ixz="0.0"
				iyy="0.01" iyz="0.0"
				izz="0.01" />
		</inertial>
	</link>

	<joint name="fix_wight" type="fixed">
		<parent link="hone"/>
		<child link="weight"/>
		<origin xyz="0 0.05 0" rpy="0 0 0"/>
	</joint>

	<gazebo reference="base">
		<material>Gazebo/Orange</material>
	</gazebo>
	
	<gazebo reference="hone">
		<material>Gazebo/Red</material>
	</gazebo>

</robot>