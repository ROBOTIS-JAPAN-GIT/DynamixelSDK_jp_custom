<?xml version="1.0"?>
<robot name="my_robo" xmlns:xacro="http://ros.org/wiki/xacro">\
	<xacro:include filename="$(find dynamixel_description)/urdf/_XM540.urdf.xacro"/>
	<xacro:include filename="$(find dynamixel_description)/urdf/common_properties.xacro"/>

	<link name="base">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.05 0.08 0.001"/>
			</geometry>
			<material name="orange"/>
		</visual>
	</link>

	<xacro:servo_XM540 parent="base" child="hone" center_child="true" fixed_plane="back"/>

	<link name="hone">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<cylinder length="0.001" radius="0.01"/>
			</geometry>
			<material name="red"/>
		</visual>
	</link>

	<gazebo reference="base">
		<material>Gazebo/Orange</material>
	</gazebo>
	
	<gazebo reference="hone">
		<material>Gazebo/Red</material>
	</gazebo>

    <!--ros_controlプラグインをロード-->
    <gazebo>
        <plugin name="control" filename="libgazebo_ros_control.so">
        </plugin>
    </gazebo>

</robot>